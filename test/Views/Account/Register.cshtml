@using Microsoft.AspNetCore.Mvc.TagHelpers
@model test.Models.User

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="my-2">User Registration</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <!-- Removed AntiForgeryToken to make form vulnerable to CSRF -->

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Username</label>
                            <input asp-for="Username" class="form-control" placeholder="Choose a unique username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <!-- Removed password requirements -->
                        </div>

                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                            <input name="confirmPassword" type="password" class="form-control" placeholder="Repeat your password" />
                            <!-- Removed client-side password matching validation -->
                        </div>

                        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @ViewData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Create Account</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Login">Already have an account? Log in here</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Removed client-side validation scripts -->
}
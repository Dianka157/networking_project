@using Microsoft.AspNetCore.Mvc.TagHelpers
@model test.Models.User

@if (TempData["Message"] != null)
{
<div class="alert alert-success" role="alert">
    @TempData["Message"]
</div>
}

@if (TempData["Success"] != null)
{
<div class="alert alert-success" role="alert">
    @TempData["Success"]
</div>
}

@if (ViewData["LoginError"] != null)
{
<div class="alert alert-danger">@ViewData["LoginError"]</div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center">
                    <h3 class="mb-0">Log in</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" asp-controller="Account" method="post">
                        <!-- Removed AntiForgeryToken to make form vulnerable to CSRF -->
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email Address</label>
                            <input name="Email" id="Email" class="form-control" placeholder="Enter your email" />
                            <!-- Removed validation span -->
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <input name="Password" id="Password" type="password" class="form-control" placeholder="Enter your password" />
                            <!-- Removed validation span -->
                        </div>
                        @if (ViewData["LoginError"] != null)
                        {
                            <div class="alert alert-danger">
                                @ViewData["LoginError"]
                            </div>
                        }
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Register" asp-controller="Account" class="btn btn-link">Don't have an account? Register here</a>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="ForgotPassword" asp-controller="Account" class="btn btn-link">Forgot Password? Click Here</a>
                </div>
            </div>
        </div>
    </div>
</div>


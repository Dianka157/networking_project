@{
    ViewData["Title"] = "My Library";
    var borrowedBooks = ViewBag.BorrowedBooks as IEnumerable<test.Models.BorrowModel>;
    var purchasedBooks = ViewBag.PurchasedBooks as IEnumerable<test.Models.PurchaseModel>;
}

<div class="max-w-6xl mx-auto p-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">My Library</h1>

    <!-- Borrowed Books Section -->
    <div class="mb-10">
        <h2 class="text-2xl font-semibold text-gray-700 mb-6 pb-2 border-b">Borrowed Books</h2>
        @if (borrowedBooks != null && borrowedBooks.Any())
        {
            <div class="space-y-6">
                @foreach (var borrow in borrowedBooks)
                {
                    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                        <div class="flex justify-between items-start">
                            <div>
                                <h3 class="text-xl font-semibold text-gray-800">@borrow.Book.Title</h3>
                                <p class="text-gray-600 mt-1">by @borrow.Book.Author</p>
                            </div>
                            @if (!borrow.IsReturned)
                            {
                                <form asp-action="ReturnBook" asp-route-id="@borrow.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md transition-colors">
                                        Return Book
                                    </button>
                                </form>
                            }
                        </div>
                        <div class="mt-4 flex gap-x-6 text-sm text-gray-500">
                            <div>
                                <span class="font-medium">Borrowed:</span>
                                <span>@borrow.StartDate.ToShortDateString()</span>
                            </div>
                            <div>
                                <span class="font-medium">Due:</span>
                                <span class="@(borrow.EndDate < DateTime.Now ? "text-red-500" : "")">
                                    @borrow.EndDate.ToShortDateString()
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-gray-500 italic">You haven't borrowed any books yet.</p>
        }
    </div>

    <!-- Purchased Books Section -->
    <div>
        <h2 class="text-2xl font-semibold text-gray-700 mb-6 pb-2 border-b">Purchased Books</h2>
        @if (purchasedBooks != null && purchasedBooks.Any())
        {
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var purchase in purchasedBooks)
                {
                    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                        <h3 class="text-xl font-semibold text-gray-800">@purchase.Book.Title</h3>
                        <p class="text-gray-600 mt-1">by @purchase.Book.Author</p>
                        <div class="mt-4 text-sm text-gray-500">
                            <p class="flex justify-between">
                                <span class="font-medium">Purchased:</span>
                                <span>@purchase.PurchaseDate.ToShortDateString()</span>
                            </p>
                            <p class="flex justify-between mt-1">
                                <span class="font-medium">Price:</span>
                                <span>$@purchase.FinalPrice.ToString("F2")</span>
                            </p>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-gray-500 italic">You haven't purchased any books yet.</p>
        }
    </div>
</div>

@section Scripts {
    @if (TempData["Success"] != null)
    {
        <script>
            alert('@TempData["Success"]');
        </script>
    }
    @if (TempData["Error"] != null)
    {
        <script>
            alert('@TempData["Error"]');
        </script>
    }
}
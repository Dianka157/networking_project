@using Microsoft.AspNetCore.Http;

@{
    var userPermission = Context?.Session?.GetString("UserPermission") ?? "Guest";
    Console.WriteLine($"Current UserPermission: {userPermission}");

    switch (userPermission)
    {
        case "Admin":
            Layout = "~/Views/Shared/_AdminLayout.cshtml";
            break;
        case "Customer":
            Layout = "~/Views/Shared/_CustomerLayout.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_NotLoggedInLayout.cshtml";
            break;
    }
}

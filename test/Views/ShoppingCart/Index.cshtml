@model test.Models.ShoppingCartModel
@using test.Models

<div class="container mt-4">
    <h2>Shopping Cart</h2>
    @if (!Model.CartItems.Any())
    {
        <div class="alert alert-info">
            Your cart is empty. <a asp-controller="Book" asp-action="Index">Continue shopping</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Book</th>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="@item.Book.CoverImage" alt="@item.Book.Title" style="width: 50px; margin-right: 10px;" />
                                <div>
                                    <h6 class="mb-0">@item.Book.Title</h6>
                                    <small>@item.Book.Author</small>
                                </div>
                            </div>
                        </td>
                        <td>@(item.IsBorrow ? "Borrow" : "Buy")</td>
                        <td>@string.Format("${0:F2}", item.FinalPrice ??
                                                      (item.IsBorrow ? item.Book.BorrowPrice ?? 0 : item.Book.PurchasePrice ?? 0))</td>
                        <td>
                            <form asp-action="RemoveFromCart" method="post">
                                <input type="hidden" name="bookId" value="@item.BookId" />
                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="2" class="text-right"><strong>Total:</strong></td>
                    <td><strong>@string.Format("${0:F2}", Model.CartItems.Sum(item =>
                                item.FinalPrice ?? (item.IsBorrow ? item.Book.BorrowPrice ?? 0 : item.Book.PurchasePrice ?? 0)))</strong></td>
                    <td></td>
                </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-controller="Book" asp-action="Index" class="btn btn-secondary">Continue Shopping</a>
            <a asp-action="Checkout" class="btn btn-primary">Proceed to Checkout</a>
        </div>
    }
</div>